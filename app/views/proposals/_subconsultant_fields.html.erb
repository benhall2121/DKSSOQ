<div class="dynamic_sub">
  <div class="row">
  	<div class="span4">
  	  <div class="span1">
  	  	Sub #
  	  </div>
  	  <div class="span2">
  	  	<%= f.text_field :sub_num %>
  	  </div>
  	</div>
  	<div class="span7">
  	  <div class="span2">
  	  	Firm Name
  	  </div>
  	  <div class="span4">
  	  	<%= f.text_field :firm_name %>
  	  </div>
  	</div>
  </div>

  <div class="row">
  	<div class="span4">
  	  <div class="span1">
  	  	Contact Name
  	  </div>
  	  <div class="span2">
  	  	<%= f.text_field :contact_name %>
  	  </div>
  	</div>
  	<div class="span7">
  	  <div class="span2">
  	  	Contact Address
  	  </div>
  	  <div class="span4">
  	  	<%= f.text_area :contact_address %>
  	  </div>
  	</div>
  </div>

  <div class="row">
  	<div class="span3">
  	  	Phone: 
  	  	<%= f.text_field :contact_phone, :style => 'width:150px;' %>
  	</div>
  	<div class="span4">
  	  	Fax: 
  	  	<%= f.text_field :contact_fax, :style => 'width:150px;' %>
  	</div>
  	<div class="span4">
  	  	Email:
  	  	<%= f.text_field :contact_email, :style => 'width:150px;' %>
  	</div>
  </div>

  <div class="row">
  	<div class="btn btn-danger">
  	  <%= link_to_remove_fields "Remove Subconsultant", f %>
    </div>
  </div>
</div>